<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.nbapp.AddExpendActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/add_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/sandybrown"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/close"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            />
        <View
            android:id="@+id/center_line"
            android:layout_height="30dp"
            android:layout_width="1dp"
            android:background="@color/transparent"
            android:layout_centerInParent="true"
            />

        <Button
        android:id="@+id/btn_add_income"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:background="@color/transparent"
        android:layout_toLeftOf="@id/center_line"
        android:text="收入"
        android:textSize="16sp"
        />

        <Button
            android:id="@+id/btn_add_expend"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:layout_toRightOf="@id/center_line"
            android:text="支出"
            android:textSize="16sp"
            android:textColor="@color/gray"
            />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            app:srcCompat="@drawable/save"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/date_money_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/add_title"
        android:background="@color/whitesmoke">
        <ImageView
            android:id="@+id/date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/date" />
        <Button
            android:id="@+id/add_date"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/date"
            android:layout_toRightOf="@id/date"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:ems="10"
            android:textColor="@color/gray"
            android:text="2018-5-13"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@color/transparent"
            />

        <ImageView
            android:id="@+id/money"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/add_date"
            app:srcCompat="@drawable/money" />

        <EditText
            android:id="@+id/add_money"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/money"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            android:gravity="right"
            android:hint="0.00"

            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_view_expendtype"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/date_money_bar">
</android.support.v7.widget.RecyclerView>>

</RelativeLayout>
    </LinearLayout>


