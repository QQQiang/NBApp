<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/add_type_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@color/whitesmoke"
            android:src="@drawable/beaty"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/add_type_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="食物"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:layout_below="@+id/add_type_icon"
            android:layout_alignLeft="@+id/add_type_icon"
            android:layout_alignStart="@+id/add_type_icon" />

</RelativeLayout>




