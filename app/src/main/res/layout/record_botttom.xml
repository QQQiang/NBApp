<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#dddddd"
        android:layout_alignParentBottom="true"
        android:id="@+id/record_menu">

        <Button
            android:id="@+id/btn_menu_deal"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="明细"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:drawableTop="@drawable/record"
            android:drawablePadding="3dp"
            android:layout_weight="1"
            android:enabled="false"/>

        <Button
            android:id="@+id/btn_menu_stat"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="统计"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:drawableTop="@drawable/statistics"
            android:drawablePadding="3dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_menu_add"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="记录"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:drawableTop="@drawable/add"
            android:drawablePadding="3dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_meun_find"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="发现"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:drawableTop="@drawable/find"
            android:drawablePadding="3dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_menu_my"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="我的"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:drawableTop="@drawable/me"
            android:drawablePadding="3dp"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>
