    <ImageView
        android:id="@+id/detail_type_icon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/beaty"
        android:scaleType="fitCenter"

        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/detail_type_name"
        android:layout_toStartOf="@+id/detail_type_name" />
    <TextView
        android:id="@+id/detail_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@string/detail_record_textSize"
        android:textColor="@color/black"
        android:text="食物"
        android:layout_alignBaseline="@+id/detail_money"
        android:layout_alignBottom="@+id/detail_money"
        android:layout_alignRight="@+id/detail_money"
        android:layout_alignEnd="@+id/detail_money"
        android:layout_marginRight="78dp"
        android:layout_marginEnd="78dp" />
    <TextView
        android:id="@+id/detail_money"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
