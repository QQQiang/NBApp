<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/detail_record_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/detail_timeBar_date"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:text="5月13号"
        android:gravity="center"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/detail_timeBar_week"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/detail_timeBar_date"
        android:text="星期四"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/gray"

        />

    <ImageView
        android:id="@+id/detail_type_icon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@+id/detail_type_name"
        android:layout_toStartOf="@+id/detail_type_name"
        android:src="@drawable/calculator"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/detail_type_name"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="相机"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/detail_money"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/detail_money"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="0.00"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        />


</RelativeLayout>

