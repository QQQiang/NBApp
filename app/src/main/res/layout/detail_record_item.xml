<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/detail_record_item"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
            android:id="@+id/detail_timeBar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:textSize="@string/detail_time_textSize"
            android:textColor="@color/gray_8f"
            android:text="5月3号"
            />

        <TextView
            android:id="@+id/detail_timeBar_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/detail_timeBar_date"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:textSize="@string/detail_time_textSize"
            android:textColor="@color/gray_8f"
            android:text="星期四"
            />

        <!--<TextView
            android:id="@+id/detail_timeBar_expend_money"
