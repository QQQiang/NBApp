            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/detail_timeBar_expend_money"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="5dp"
            android:text="支出："
            android:textSize="@string/detail_time_textSize"
            android:textColor="@color/gray_8f"
            />

        <TextView
            android:id="@+id/detail_timeBar_income_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/detail_expend_hint"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="@string/detail_time_textSize"
            android:textColor="@color/gray_8f"
